# Dump from Jet Brain's defaults. Only really care about Kotlin Code Style standards
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = false
max_line_length = 120
tab_width = 4

[*.conf]
indent_size = 2
tab_width = 2

[*.java]
indent_size = 2
tab_width = 2

[*.less]
indent_size = 2

[*.sass]
indent_size = 2

[*.scss]
indent_size = 2

[*.styl]
indent_size = 2

[{*.bash,*.sh,*.zsh}]
indent_size = 2
tab_width = 2


# follow the official Kotlin Style Guide
# ktlint is more strict, so we disable some of those rules
[{*.gradle.kts,*.kt,*.kts,*.main.kts}]
indent_size = 4
indent_style = space
ktlint_code_style = intellij_idea
ktlint_standard_discouraged-comment-location = disabled # this prevented EOL comments in some places where it is useful
ktlint_standard_if-else-wrapping = disabled # this was required to disable `discouraged-comment-location`
ktlint_standard_comment-wrapping = disabled # this is unnecessarily strict about comment placement and type
ktlint_standard_trailing-comma-on-call-site = disabled # trailing commas at call site is better to stay optional
ktlint_standard_indent = disabled # this has too many edge cases that conflict with the built-in formatter
ktlint_standard_argument-list-wrapping = disabled # this is unnecessarily strict and can eat up a lot of vertical space
ktlint_standard_function-signature = disabled # this unnecessarily prevents certain forms of listing parameters
ktlint_standard_property-naming = disabled # this would require many manual changes, but can be re-enabled in the future
ktlint_standard_enum-entry-name-case = disabled # can be re-enabled in the future with manual changes
ktlint_standard_function-naming = disabled # can be re-enabled in the future with manual changes
ktlint_standard_filename = disabled # can be re-enabled in the future with manual changes (and sufficient testing)

[{*.har,*.jsb2,*.jsb3,*.json,*.fhir,.babelrc,.eslintrc,.stylelintrc,bowerrc,jest.config}]
indent_size = 2


[{*.yaml,*.yml}]
indent_size = 2

[{*.schema,*.valueset}]
indent_size = 2
